                 MouseWheel="textBox_MouseWheel" IsEnabled="False"/>
        <TextBox Name="textBox16" Grid.Column="5" TextAlignment="Center" PreviewTextInput="textBox_PreviewTextInput"
                 Margin="5" FontSize="16" FontFamily="Sitka Subheading" BorderThickness="0,0,0,1"
                 FontWeight="Bold" TextChanged="textBox_TextChanged" MouseDoubleClick="textBox_MouseDoubleClick" Grid.Row="1"
                 MouseWheel="textBox_MouseWheel" IsEnabled="False"/>
        <TextBox Name="textBox17" Grid.Column="6" TextAlignment="Center" PreviewTextInput="textBox_PreviewTextInput"
                 Margin="5" FontSize="16" FontFamily="Sitka Subheading" BorderThickness="0,0,0,1"
                 FontWeight="Bold" TextChanged="textBox_TextChanged" MouseDoubleClick="textBox_MouseDoubleClick" Grid.Row="1"
                 MouseWheel="textBox_MouseWheel" IsEnabled="False"/>
        <TextBox Name="textBox18" Grid.Column="7" TextAlignment="Center" PreviewTextInput="textBox_PreviewTextInput"
