                 FontWeight="Bold" TextChanged="textBox_TextChanged" MouseDoubleClick="textBox_MouseDoubleClick" Grid.Row="2"
                 MouseWheel="textBox_MouseWheel" IsEnabled="False"/>
        <TextBox Name="textBox30" Grid.Column="9" TextAlignment="Center" PreviewTextInput="textBox_PreviewTextInput"
                 Margin="5" FontSize="16" FontFamily="Sitka Subheading" BorderThickness="0,0,0,1"
                 FontWeight="Bold" TextChanged="textBox_TextChanged" MouseDoubleClick="textBox_MouseDoubleClick" Grid.Row="2"
                 MouseWheel="textBox_MouseWheel" IsEnabled="False" Foreground="Red"/>

    </Grid>
    
</Window>
