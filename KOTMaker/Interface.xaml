                 FontWeight="Bold" TextChanged="textBox_TextChanged" MouseDoubleClick="textBox_MouseDoubleClick"
                 MouseWheel="textBox_MouseWheel" IsEnabled="False"/>
        <TextBox Name="textBox10" Grid.Column="9" TextAlignment="Center" PreviewTextInput="textBox_PreviewTextInput"
                 Margin="5" FontSize="16" FontFamily="Sitka Subheading" BorderThickness="0,0,0,1"
                 FontWeight="Bold" TextChanged="textBox_TextChanged" MouseDoubleClick="textBox_MouseDoubleClick"
                 MouseWheel="textBox_MouseWheel" IsEnabled="False"/>
        <TextBox Name="textBox11" Grid.Column="0" TextAlignment="Center" PreviewTextInput="textBox_PreviewTextInput"
                 Margin="5" FontSize="16" FontFamily="Sitka Subheading" BorderThickness="0,0,0,1"
                 FontWeight="Bold" TextChanged="textBox_TextChanged" MouseDoubleClick="textBox_MouseDoubleClick" Grid.Row="1"
                 MouseWheel="textBox_MouseWheel" IsEnabled="False"/>
        <TextBox Name="textBox12" Grid.Column="1" TextAlignment="Center" PreviewTextInput="textBox_PreviewTextInput"
                 Margin="5" FontSize="16" FontFamily="Sitka Subheading" BorderThickness="0,0,0,1"
                 FontWeight="Bold" TextChanged="textBox_TextChanged" MouseDoubleClick="textBox_MouseDoubleClick" Grid.Row="1"
                 MouseWheel="textBox_MouseWheel" IsEnabled="False"/>
        <TextBox Name="textBox13" Grid.Column="2" TextAlignment="Center" PreviewTextInput="textBox_PreviewTextInput"
