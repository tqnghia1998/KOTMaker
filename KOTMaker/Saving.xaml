<Window x:Class="KOTMaker.Saving"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KOTMaker"  WindowStartupLocation="CenterOwner"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Save As" Height="100" Width="420">
    <Window.Background>
        <ImageBrush ImageSource="Saving.png"/>
    </Window.Background>
    <Grid>
        <TextBox Name="textBoxSave" HorizontalAlignment="Left" FontSize="18"
                 Width="295" Margin="15" FontFamily="Sitka Subheading" TextAlignment="Center"
                 BorderThickness="0,0,0,1" KeyDown="textBoxSave_KeyDown"/>
        <Button Name="btnSaveAs" Margin="15,0,15,0" Content="Save" Padding="0"
                Width="70" HorizontalAlignment="Right"
                FontSize="15" FontFamily="Sitka Subheading" Click="btnSaveAs_Click"/>
    </Grid>
</Window>